{
  "manifest_version": 3,
  "name": "BearBot",
  "version": "2.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.beartracks.ualberta.ca/*"],
      "js": ["inject.js"],
      "all_frames": true
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.beartracks.ualberta.ca/*",
    "*://www.guest.beartracks.ualberta.ca/*"
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://www.beartracks.ualberta.ca/*"],
      "resources": ["event.js"]
    }
  ]
}
