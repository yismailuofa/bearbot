{
  "manifest_version": 3,
  "name": "BearBot",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.beartracks.ualberta.ca/*",
        "*://www.guest.beartracks.ualberta.ca/*"
      ],
      "js": ["inject.js"],
      "all_frames": true
    }
  ],
  "permissions": ["scripting", "tabs", "notifications", "storage"],
  "host_permissions": [
    "*://www.beartracks.ualberta.ca/*",
    "*://www.guest.beartracks.ualberta.ca/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://www.beartracks.ualberta.ca/*",
        "*://www.guest.beartracks.ualberta.ca/*"
      ],
      "resources": ["event.js"]
    }
  ]
}
